{
  "include": [
    "./src/app/**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise"
    ],
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "*",
        "../shared/*"
      ]
    }
  }
}