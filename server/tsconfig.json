{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es6",
      "es7",
      "ES2015.promise"
    ],
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
      "@course/*": [
        "./src/course/*"
      ],
      "@module/*": [
        "./src/module/*"
      ],
      "@section/*": [
        "./src/section/*"
      ],
      "*": [
        "*"
      ]
    }
  }
}
